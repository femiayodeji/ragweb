        }

        async function handleVoiceQueryAudioUpload() {
            const file = document.getElementById('voiceQueryAudioFile').files[0];
            if (!file) return;
            await sendVoiceQueryAudio(file);
        }

        async function sendVoiceQueryAudio(audioBlob) {
            showLoading();
            hideResponse();
            clearTypingQueue();

            const formData = new FormData();
            const fileName = audioBlob.type.includes('webm') ? 'recording.webm' : 'recording.wav';
            formData.append('audio', audioBlob, fileName);

            try {
                // Build URL with session_id parameter
                const url = new URL(`${API_URL}/voice-query`);
                if (sessionId) {
                    url.searchParams.append('session_id', sessionId);
                }

                const response = await fetch(url.toString(), {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    let errorMessage = 'Failed to process voice query';
                    try {
                        const errorData = await response.json();
                        errorMessage = errorData.detail || errorMessage;
                    } catch (e) {
                        const errorText = await response.text();
                        errorMessage = errorText || errorMessage;
                    }
                    throw new Error(errorMessage);
                }

                // Show response section with placeholders
                document.getElementById('questionText').textContent = 'Processing your voice...';
                document.getElementById('answerText').innerHTML = '';
                document.getElementById('answerText').setAttribute('data-raw-text', '');
                document.getElementById('responseSection').classList.add('active');
                
                const answerBox = document.querySelector('.answer-box');
                answerBox.classList.add('streaming');

                // Handle SSE streaming response
                const reader = response.body.getReader();
                const decoder = new TextDecoder();
                let buffer = '';
                let fullQuestion = '';

                console.log('Starting to read voice query SSE stream...');
                
                hideLoading();

                while (true) {
                    const { done, value } = await reader.read();
                    if (done) {
                        console.log('Voice query stream complete');
                        break;
                    }

                    buffer += decoder.decode(value, { stream: true });
                    const lines = buffer.split('\n\n');
                    buffer = lines.pop();

                    for (const line of lines) {
                        if (line.startsWith('data: ')) {
                            try {
                                const data = JSON.parse(line.slice(6));
                                console.log('Voice query received:', data);
                                
                                if (data.session_id) {
                                    sessionId = data.session_id;
                                    sessionStorage.setItem('sessionId', sessionId);
                                } else if (data.question) {
                                    fullQuestion = data.question;
                                    document.getElementById('questionText').textContent = fullQuestion;
                                } else if (data.token !== undefined) {
                                    await typeText(data.token, 'answerText');
                                } else if (data.done === true) {
                                    // Wait for typing to complete
                                    while (isTyping || typingQueue.length > 0) {
                                        await new Promise(resolve => setTimeout(resolve, 50));
                                    }
                                    answerBox.classList.remove('streaming');
                                    
                                    // Get TTS for the answer
                                    const fullAnswer = document.getElementById('answerText').getAttribute('data-raw-text') || '';
                                    if (fullAnswer) {
                                        getTTS(fullAnswer);
                                    }
                                    
                                    document.getElementById('voiceQueryStatus').textContent = '‚úì Complete';
                                    document.getElementById('voiceQueryStatus').classList.remove('recording');
                                    
                                    setTimeout(() => {
                                        document.getElementById('voiceQueryStatus').textContent = 'Click to record your question';
                                    }, 3000);
                                } else if (data.error) {
                                    throw new Error(data.error || 'Streaming error');
                                }
                            } catch (parseError) {
                                console.error('Failed to parse voice query SSE data:', parseError, line);
                            }
                        }
                    }
                }

            } catch (error) {
                console.error('Voice query error:', error);
                showToast('Error: ' + error.message, 'error');
                document.getElementById('voiceQueryStatus').textContent = 'Click to record your question';
                document.getElementById('voiceQueryStatus').classList.remove('recording');
                hideResponse();
            } finally {
                // Wait for any remaining typing to complete
                while (isTyping || typingQueue.length > 0) {
                    await new Promise(resolve => setTimeout(resolve, 50));
                }
                hideLoading();
                const answerBox = document.querySelector('.answer-box');
                if (answerBox) {
                    answerBox.classList.remove('streaming');
                }
            }
        }

        async function processQuery(question) {
            showLoading();
            hideResponse();
            clearTypingQueue();
            
            // Show question immediately
            document.getElementById('questionText').textContent = question;
            document.getElementById('answerText').innerHTML = '';
            document.getElementById('answerText').setAttribute('data-raw-text', '');
            document.getElementById('responseSection').classList.add('active');
            
            // Add streaming indicator
            const answerBox = document.querySelector('.answer-box');
            answerBox.classList.add('streaming');

            try {
                const response = await fetch(`${API_URL}/query`, {
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json',
                        'Accept': 'text/event-stream'
                    },
                    body: JSON.stringify({ question, session_id: sessionId })
                });

                if (!response.ok) {
                    const errorData = await response.json().catch(() => ({}));
                    throw new Error(errorData.detail || 'Failed to get response');
                }

                // Check if response body exists
                if (!response.body) {
                    throw new Error('Response body is null - streaming not supported');
                }

                const reader = response.body.getReader();
                const decoder = new TextDecoder();
                let buffer = '';

                console.log('Starting to read SSE stream...', {
                    headers: Object.fromEntries(response.headers.entries()),
                    status: response.status
                });

                hideLoading();

                while (true) {
                    const { done, value } = await reader.read();
                    if (done) {
                        console.log('Stream complete');
                        break;
                    }

                    const chunk = decoder.decode(value, { stream: true });
                    console.log('Raw chunk received:', chunk);
                    buffer += chunk;
                    const lines = buffer.split('\n\n');
                    buffer = lines.pop();

                    for (const line of lines) {
                        console.log('Processing line:', line);
                        if (line.startsWith('data: ')) {
                            try {
                                const data = JSON.parse(line.slice(6));
                                console.log('Received:', data);
                                
                                if (data.session_id) {
                                    sessionId = data.session_id;
                                    sessionStorage.setItem('sessionId', sessionId);
                                } else if (data.token !== undefined) {
                                    await typeText(data.token, 'answerText');
                                } else if (data.done === true) {
                                    // Wait for typing to complete
                                    while (isTyping || typingQueue.length > 0) {
                                        await new Promise(resolve => setTimeout(resolve, 50));
                                    }
                                    answerBox.classList.remove('streaming');
                                    const fullAnswer = document.getElementById('answerText').getAttribute('data-raw-text') || '';
                                    getTTS(fullAnswer);
                                } else if (data.error) {
                                    throw new Error(data.error || 'Streaming error');
                                }
                            } catch (parseError) {
                                console.error('Failed to parse SSE data:', parseError, line);
                            }
                        }
                    }
                }

            } catch (error) {
                console.error('Query error:', error);
                showToast('Error: ' + error.message, 'error');
                hideResponse();
                answerBox.classList.remove('streaming');
            } finally {
                // Wait for any remaining typing to complete
                while (isTyping || typingQueue.length > 0) {
                    await new Promise(resolve => setTimeout(resolve, 50));
                }
                hideLoading();
                const answerBox = document.querySelector('.answer-box');
                if (answerBox) {
                    answerBox.classList.remove('streaming');
                }
            }
        }

        async function toggleRecording() {
            if (!isRecording) {
                startRecording();
            } else {
                stopRecording();
            }
        }

        async function startRecording() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({ 
                    audio: {
                        echoCancellation: true,
                        noiseSuppression: true,
                        sampleRate: 16000
                    } 
                });
                
                const mimeType = MediaRecorder.isTypeSupported('audio/webm;codecs=opus') 
                    ? 'audio/webm;codecs=opus' 
                    : 'audio/webm';
                
                mediaRecorder = new MediaRecorder(stream, { mimeType });
                audioChunks = [];

                mediaRecorder.ondataavailable = (event) => {
                    if (event.data.size > 0) {
                        audioChunks.push(event.data);
                    }
                };

                mediaRecorder.onstop = async () => {
                    if (recordingTimer) {
                        clearInterval(recordingTimer);
                        recordingTimer = null;
                    }
                    
                    const audioBlob = new Blob(audioChunks, { type: mimeType });
                    await sendVoiceQuery(audioBlob);
                    stream.getTracks().forEach(track => track.stop());
                };

                mediaRecorder.start(1000);
                isRecording = true;
                recordingStartTime = Date.now();

                document.getElementById('recordBtn').classList.add('recording');
                document.getElementById('recordStatus').textContent = 'üî¥ Recording... 0:00';
                document.getElementById('recordStatus').classList.add('recording');
                
                recordingTimer = setInterval(() => {
                    const elapsed = Math.floor((Date.now() - recordingStartTime) / 1000);
                    const minutes = Math.floor(elapsed / 60);
                    const seconds = elapsed % 60;
                    const timeStr = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                    document.getElementById('recordStatus').textContent = `üî¥ Recording... ${timeStr}`;
                }, 1000);

            } catch (error) {
                showToast('Microphone access denied. Please check your browser settings.', 'error');
            }
        }

        function stopRecording() {
            if (mediaRecorder && isRecording) {
                isRecording = false;
                
                if (mediaRecorder.state !== 'inactive') {
                    mediaRecorder.stop();
                }

                document.getElementById('recordBtn').classList.remove('recording');
                document.getElementById('recordStatus').textContent = 'Processing your audio...';
                document.getElementById('recordStatus').classList.remove('recording');
            }
        }

        async function handleAudioUpload() {
            const file = document.getElementById('audioFile').files[0];
            if (!file) return;
            await sendVoiceQuery(file);
        }

        async function sendVoiceQuery(audioBlob) {
            showLoading();
            hideResponse();

            const formData = new FormData();
            const fileName = audioBlob.type.includes('webm') ? 'recording.webm' : 'recording.wav';
            formData.append('audio', audioBlob, fileName);
            if (sessionId) {
                formData.append('session_id', sessionId);
            }

            try {
                const response = await fetch(`${API_URL}/voice-full`, {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    const errorData = await response.json();
                    throw new Error(errorData.detail || 'Failed to process voice query');
                }

                // Get session ID from headers
                const newSessionId = response.headers.get('X-Session-Id');
                if (newSessionId) {
                    sessionId = newSessionId;
                    sessionStorage.setItem('sessionId', sessionId);
                }

                // Get audio response
                const audioBlob = await response.blob();
                const audioUrl = URL.createObjectURL(audioBlob);
                
                const audioPlayer = document.getElementById('audioPlayer');
                audioPlayer.src = audioUrl;
                document.getElementById('audioResponse').style.display = 'block';

                // Show response section with placeholder
                document.getElementById('questionText').textContent = 'Processing your voice question...';
                document.getElementById('answerText').innerHTML = '<p><em>Listen to the audio response above</em></p>';
                document.getElementById('responseSection').classList.add('active');

                document.getElementById('recordStatus').textContent = '‚úì Complete';
                document.getElementById('recordStatus').classList.remove('recording');
                
                setTimeout(() => {
                    document.getElementById('recordStatus').textContent = 'Ready to record';
                }, 3000);

            } catch (error) {
                showToast('Error: ' + error.message, 'error');
                document.getElementById('recordStatus').textContent = 'Ready to record';
                document.getElementById('recordStatus').classList.remove('recording');
            } finally {
                hideLoading();
            }
        }

        async function getTTS(text) {
            try {
                const response = await fetch(`${API_URL}/text-to-speech`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ question: text })
                });

                if (response.ok) {
                    const audioBlob = await response.blob();
                    const audioUrl = URL.createObjectURL(audioBlob);
                    
                    const audioPlayer = document.getElementById('audioPlayer');
                    audioPlayer.src = audioUrl;
                    document.getElementById('audioResponse').style.display = 'block';
                }
            } catch (error) {
                console.error('TTS error:', error);
            }
        }

        function displayResponse(question, answer) {
            document.getElementById('questionText').textContent = question;
            
            // Format the answer text
            const formattedAnswer = formatAnswer(answer);
            document.getElementById('answerText').innerHTML = formattedAnswer;
            
            document.getElementById('responseSection').classList.add('active');
        }

        function formatAnswer(text) {
            // Convert markdown-style formatting to HTML
            let formatted = text;

            // Convert **bold** to <strong>
            formatted = formatted.replace(/\*\*(.+?)\*\*/g, '<strong>$1</strong>');

            // Convert numbered lists (1. 2. 3.)
            formatted = formatted.replace(/^(\d+)\.\s+(.+)$/gm, '<li>$2</li>');
            
            // Wrap consecutive <li> in <ol>
            formatted = formatted.replace(/(<li>.*<\/li>\n?)+/g, '<ol>$&</ol>');

            // Convert bullet points (-, *, ‚Ä¢)
            formatted = formatted.replace(/^[-*‚Ä¢]\s+(.+)$/gm, '<li>$1</li>');
            
            // Wrap consecutive bullet <li> in <ul> (that aren't already in ol)
            formatted = formatted.replace(/(<li>.*<\/li>\n?)+(?!<\/ol>)/g, function(match) {
                if (!match.includes('<ol>')) {
                    return '<ul>' + match + '</ul>';
                }
                return match;
            });

            // Convert section headers (lines that end with :)
            formatted = formatted.replace(/^(.+):$/gm, '<h3>$1</h3>');

            // Convert double line breaks to paragraphs
            const paragraphs = formatted.split(/\n\n+/);
            formatted = paragraphs.map(p => {
                // Don't wrap if already wrapped in tags
                if (p.trim().startsWith('<')) {
                    return p;
                }
                return '<p>' + p.trim() + '</p>';
            }).join('');

            // Convert single line breaks to <br>
            formatted = formatted.replace(/\n(?!<)/g, '<br>');

            return formatted;
        }

        function showLoading() {
            document.getElementById('loading').classList.add('active');
        }

        function hideLoading() {
            document.getElementById('loading').classList.remove('active');
        }

        function hideResponse() {
            document.getElementById('responseSection').classList.remove('active');
            document.getElementById('audioResponse').style.display = 'none';
        }
    </script>
